@using Application.ClientFeatures.Class.Response
@model List<ClassResponse>

@{
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 class="my-4 font-weight-normal bg-info text-white p-2 rounded">All Available Classes List</h3>
            <button class="btn btn-success float-right">Add New Class</button>
        </div>
        <div class="col-md-12">
            <h1>Classes</h1>
            <table class="table table-bordered">
                <thead class="table-info">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Class Id</th>
                        <th scope="col">Class Name</th>
                        <th scope="col">Grade Level</th>
                        <th scope="col">Instructor Name</th>
                        <th scope="col">Max Class size</th>
                        <th scope="col">Start Timing</th>
                        <th scope="col">End Timing</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var count = 1;
                        foreach (var user in Model)
                        {
                            <tr>
                                <td scope="row">@count</td>
                                <td>@user.Id</td>
                                <td>@user.ClassName</td>
                                <td>@user.GradeLevel</td>
                                <td>@user.InstructorName</td>
                                <td>@user.MaxClassSize</td>
                                <td>@user.StartTiming</td>
                                <td>@user.EndTiming</td>
                                @if (user.Status == 1)
                                {
                                    <td><span class="badge badge-success" style="font-size: 12px !important">Active</span></td>
                                }
                                else
                                {
                                    <td><span class="badge badge-danger" style="font-size: 12px !important">Inactive</span></td>

                                }
                                <td>@user.CreatedAt.Value.ToString("dd-MM-yyyy hh:mm tt")</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Class", new { id = user.Id })" class="btn btn-primary">Edit</a>
                                    <a href="@Url.Action("Delete", "Class", new { id = user.Id })" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>