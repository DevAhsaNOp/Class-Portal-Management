@using Application.ClientFeatures.User.Request
@model UserLoginRequest

@{
    ViewData["Title"] = "Sign In - KidKinder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: #f8f8f8 !important;
    }

    #formLogin {
        margin: 20px;
        background: #fdfdfd;
        padding: 60px;
        border-radius: 20px;
        text-align: center;
        -webkit-box-shadow: 2px 2px 3px rgba(0,0,0,0.1);
        box-shadow: 2px 2px 3px rgba(0,0,0,0.1);
    }

    .formLabel {
        display: block;
        position: relative;
        margin: 40px 0px;
    }

    .label-txt {
        position: absolute;
        top: -1.6em;
        padding: 10px;
        font-size: .8em;
        letter-spacing: 1px;
        color: #222;
        transition: ease .3s;
    }

    .input {
        width: 100%;
        padding: 10px;
        background: transparent;
        border: none;
        outline: none;
    }

    .line-box {
        position: relative;
        width: 100%;
        height: 1px;
        background: #999;
    }

    .line {
        position: absolute;
        width: 0%;
        height: 1px;
        top: 0px;
        left: 50%;
        transform: translateX(-50%);
        background: #222;
        transition: ease .6s;
    }

    .input:focus + .line-box .line {
        width: 100%;
    }

    .label-active {
        top: -2em;
    }

    .btnNavi {
        font-weight: bold !important;
        color: #fff !important;
        background: #17a2b8 !important;
        padding: 5px 20px !important;
        border-radius: 25px !important;
        margin-left: 10px !important;
        text-decoration: none !important;
    }

        .btnNavi:hover {
            background: #138496 !important;
        }


    #btnLogin {
        display: inline-block;
        padding: 12px 68px;
        background: #efefef;
        font-weight: bold;
        color: rgb(120,120,120);
        border: none;
        outline: none;
        border-radius: 40px;
        text-transform: uppercase;
        cursor: pointer;
        transition: ease .3s;
    }

        #btnLogin:hover {
            background: #4dbccd;
            color: #fff;
        }
</style>

<!-- Header Start -->
<div class="container-fluid bg-primary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
        <h3 class="display-3 font-weight-bold text-white">User Sign In</h3>
        <div class="d-inline-flex text-white">
            <p class="m-0"><a class="text-white" href="">Home</a></p>
            <p class="m-0 px-2">/</p>
            <p class="m-0">User Sign In</p>
        </div>
    </div>
</div>
<!-- Header End -->

<div class="container-fluid">
    <div class="row justify-content-center ">
        <div class="col-md-4">
            <img src="~/img/login.svg" style="max-width: 100% !important; height: 100% !important;" />
        </div>
        <div class="col-md-6">
            <!-- Login Form Start -->
            <h2 class="text-left px-5">
                KidKinder - Class Management System
            </h2>
            <form asp-controller="Account" asp-action="Login" method="post" id="formLogin">
                <h4 class="text-left font-weight-bolder">Sign In with your account</h4>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible show fade">
                        <div class="alert-body">
                            <button class="close" data-dismiss="alert">
                                <span>×</span>
                            </button>
                            @Html.Raw(TempData["Success"])
                        </div>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible show fade">
                        <div class="alert-body">
                            <button class="close" data-dismiss="alert">
                                <span>×</span>
                            </button>
                            @Html.Raw(TempData["Error"])
                        </div>
                    </div>
                }
                <label class="formLabel">
                    <p class="label-txt">
                        ENTER YOUR EMAIL
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </p>
                    <input type="text" class="input" asp-for="Email" placeholder="abc@exmaple.com" />
                    <div class="line-box">
                        <div class="line"></div>
                    </div>
                </label>
                <label class="formLabel">
                    <p class="label-txt">
                        ENTER YOUR PASSWORD
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </p>
                    <input type="password" class="input" asp-for="Password" placeholder="********" />
                    <div class="line-box">
                        <div class="line"></div>
                    </div>
                </label>
                <div class="d-flex justify-content-start align-items-center">
                    <input type="checkbox" asp-for="RememberMe" class="mr-2" />
                    <span>Remember me</span>
                </div>
                <button id="btnLogin" type="submit">submit</button>
                <div class="d-flex justify-content-start align-items-center mt-4">
                    <span class="font-weight-bolder">Create an account? </span>
                    <a asp-controller="Account" asp-action="Register" class="btnNavi"> Sign Up </a>
                </div>
            </form>
            <!-- Login Form End -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $('.input').focus(function () {
                $(this).parent().find(".label-txt").addClass('label-active');
                $(this).parent().find(".label-txt").css('color', '#222');
                $(this).parent().find(".label-txt").css('font-weight', 'bold');
            });

            $(".input").focusout(function () {
                if ($(this).val() == '') {
                    $(this).parent().find(".label-txt").removeClass('label-active');
                    $(this).parent().find(".label-txt").css('color', '#222');
                    $(this).parent().find(".label-txt").css('font-weight', 'normal');
                };
            });

        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}