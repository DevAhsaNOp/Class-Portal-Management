@using Application.ClientFeatures.User.Request
@model UserCreateRequest

@{
    ViewData["Title"] = "Sign Up - KidKinder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: #f8f8f8 !important;
    }

    #formRegister {
        margin: 20px;
        background: #fdfdfd;
        padding: 60px;
        border-radius: 20px;
        text-align: center;
        -webkit-box-shadow: 2px 2px 3px rgba(0,0,0,0.1);
        box-shadow: 2px 2px 3px rgba(0,0,0,0.1);
    }

    .image-preview, #callback-preview {
        width: 150px;
        height: 150px;
        border: 2px solid #ddd;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        background-color: #ffffff;
        color: #ecf0f1;
    }

        .image-preview input, #callback-preview input {
            line-height: 200px;
            font-size: 200px;
            position: absolute;
            opacity: 0;
            z-index: 10;
        }

        .image-preview label, #callback-preview label {
            position: absolute;
            z-index: 5;
            opacity: 0.8;
            cursor: pointer;
            background-color: #bdc3c7;
            width: 150px;
            height: 50px;
            font-size: 12px;
            line-height: 50px;
            text-transform: uppercase;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            margin: auto;
            text-align: center;
        }

    .formLabel {
        display: block;
        position: relative;
        margin: 40px 0px;
    }

    .label-txt {
        position: absolute;
        top: -1.6em;
        padding: 10px;
        font-size: .8em;
        letter-spacing: 1px;
        color: #222;
        transition: ease .3s;
    }

    .input {
        width: 100%;
        padding: 10px;
        background: transparent;
        border: none;
        outline: none;
    }

    .line-box {
        position: relative;
        width: 100%;
        height: 1px;
        background: #999;
    }

    .line {
        position: absolute;
        width: 0%;
        height: 1px;
        top: 0px;
        left: 50%;
        transform: translateX(-50%);
        background: #222;
        transition: ease .6s;
    }

    .input:focus + .line-box .line {
        width: 100%;
    }

    .label-active {
        top: -2em;
    }

    .btnNavi{
        font-weight:bold !important;
        color: #fff !important;
        background: #17a2b8 !important;
        padding: 5px 20px !important;
        border-radius: 25px !important;
        margin-left: 10px !important;
        text-decoration: none !important;
    }

    .btnNavi:hover{
        background: #138496 !important;
    }

    #btnRegister {
        display: inline-block;
        padding: 12px 68px;
        background: #efefef;
        font-weight: bold;
        color: rgb(120,120,120);
        border: none;
        outline: none;
        border-radius: 40px;
        text-transform: uppercase;
        cursor: pointer;
        transition: ease .3s;
    }

        #btnRegister:hover {
            background: #4dbccd;
            color: #fff;
        }
</style>

<!-- Header Start -->
<div class="container-fluid bg-primary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
        <h3 class="display-3 font-weight-bold text-white">User Sign up</h3>
        <div class="d-inline-flex text-white">
            <p class="m-0"><a class="text-white" href="">Home</a></p>
            <p class="m-0 px-2">/</p>
            <p class="m-0">User Sign up</p>
        </div>
    </div>
</div>
<!-- Header End -->

<div class="container-fluid">
    <div class="row justify-content-center ">
        <div class="col-md-4">
            <img src="~/img/signup.svg" style="max-width: 100% !important; height: 100% !important;" />
        </div>
        <div class="col-md-6">
            <!-- Registeration Form Start -->
            <h2 class="text-left px-5">
                Join Now for Free
            </h2>
            <form asp-controller="Account" asp-action="Register" enctype="multipart/form-data" method="post" id="formRegister">
                <h4 class="text-left font-weight-bolder">Create an account</h4>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible show fade">
                        <div class="alert-body">
                            <button class="close" data-dismiss="alert">
                                <span>×</span>
                            </button>
                            @Html.Raw(TempData["Success"])
                        </div>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible show fade">
                        <div class="alert-body">
                            <button class="close" data-dismiss="alert">
                                <span>×</span>
                            </button>
                            @Html.Raw(TempData["Error"])
                        </div>
                    </div>
                }
                <div style="display: flex; justify-content: center;">
                    <div id="image-preview" class="image-preview">
                        <label for="image-upload" id="image-label">
                            Upload Profile Image
                            <span asp-validation-for="Image" class="text-danger font-weight-bold"></span>
                        </label>
                        <input type="file" asp-for="Image" name="Image" id="image-upload" accept="image/png,image/jpg,image/jpeg" required draggable="true" />
                    </div>
                </div>
                <label class="formLabel">
                    <p class="label-txt">
                        ENTER YOUR FULL NAME
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </p>
                    <input type="text" class="input" asp-for="FullName" placeholder="John Doe" />
                    <div class="line-box">
                        <div class="line"></div>
                    </div>
                </label>
                <label class="formLabel">
                    <p class="label-txt">
                        ENTER YOUR USER NAME
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </p>
                    <input type="text" class="input" asp-for="Username" placeholder="johndoe" />
                    <div class="line-box">
                        <div class="line"></div>
                    </div>
                </label>
                <label class="formLabel">
                    <p class="label-txt">
                        ENTER YOUR EMAIL
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </p>
                    <input type="text" class="input" asp-for="Email" placeholder="abc@exmaple.com" />
                    <div class="line-box">
                        <div class="line"></div>
                    </div>
                </label>
                <label class="formLabel">
                    <p class="label-txt">
                        ENTER YOUR PASSWORD
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </p>
                    <input type="password" class="input" asp-for="Password" placeholder="********" />
                    <div class="line-box">
                        <div class="line"></div>
                    </div>
                </label>
                <label class="formLabel">
                    <p class="label-txt">
                        CONFIRM YOUR PASSWORD
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </p>
                    <input type="password" class="input" asp-for="ConfirmPassword" placeholder="********" />
                    <div class="line-box">
                        <div class="line"></div>
                    </div>
                </label>
                <button id="btnRegister" type="submit">submit</button>
                <div class="d-flex justify-content-start align-items-center mt-4">
                    <span class="font-weight-bolder">Already have an account? </span>
                    <a asp-controller="Account" asp-action="Login" class="btnNavi"> Sign In </a>
                </div>
            </form>
            <!-- Registeration Form End -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $.uploadPreview({
                input_field: "#image-upload",   // Default: .image-upload
                preview_box: "#image-preview",  // Default: .image-preview
                label_field: "#image-label",    // Default: .image-label
                label_default: "Upload Profile Image",   // Default: Choose File
                label_selected: "Change Image",  // Default: Change File
                no_label: false,                // Default: false
                success_callback: null          // Default: null
            });

            $('.input').focus(function () {
                $(this).parent().find(".label-txt").addClass('label-active');
                $(this).parent().find(".label-txt").css('color', '#222');
                $(this).parent().find(".label-txt").css('font-weight', 'bold');
            });

            $(".input").focusout(function () {
                if ($(this).val() == '') {
                    $(this).parent().find(".label-txt").removeClass('label-active');
                    $(this).parent().find(".label-txt").css('color', '#222');
                    $(this).parent().find(".label-txt").css('font-weight', 'normal');
                };
            });

        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}