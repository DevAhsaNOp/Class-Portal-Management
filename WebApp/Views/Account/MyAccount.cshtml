@using Application.ClientFeatures.User.Request
@model UserUpdateView

@{
    ViewData["Title"] = "My Account - KidKinder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    <style>
        body {
            background: #f8f8f8 !important;
        }

        #formAcoount {
            margin: 20px;
            background: #fdfdfd;
            padding: 60px;
            border-radius: 20px;
            text-align: center;
            -webkit-box-shadow: 2px 2px 3px rgba(0,0,0,0.1);
            box-shadow: 2px 2px 3px rgba(0,0,0,0.1);
        }

        .image-preview, #callback-preview {
            border: 2px solid #ddd;
            border-radius: 50%;
            position: relative;
            overflow: hidden;
            background-color: #ffffff;
            color: #ecf0f1;
        }

            .image-preview input, #callback-preview input {
                line-height: 200px;
                font-size: 200px;
                position: absolute;
                opacity: 0;
                z-index: 10;
            }

            .image-preview label, #callback-preview label {
                position: absolute;
                z-index: 5;
                opacity: 0.8;
                cursor: pointer;
                background-color: #bdc3c7;
                width: 150px;
                height: 50px;
                font-size: 12px;
                line-height: 50px;
                text-transform: uppercase;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                margin: auto;
                text-align: center;
            }

        .formLabel {
            display: block;
            position: relative;
            margin: 40px 0px;
        }

        .label-txt {
            position: absolute;
            top: -1.6em;
            padding: 10px;
            font-size: .8em;
            letter-spacing: 1px;
            color: #222;
            transition: ease .3s;
        }

        .input {
            width: 100%;
            padding: 10px;
            background: transparent;
            border: none;
            outline: none;
        }

        .line-box {
            position: relative;
            width: 100%;
            height: 1px;
            background: #999;
        }

        .line {
            position: absolute;
            width: 0%;
            height: 1px;
            top: 0px;
            left: 50%;
            transform: translateX(-50%);
            background: #222;
            transition: ease .6s;
        }

        .input:focus + .line-box .line {
            width: 100%;
        }

        .label-active {
            top: -2em;
        }

        .btnNavi {
            font-weight: bold !important;
            color: #fff !important;
            background: #17a2b8 !important;
            padding: 5px 20px !important;
            border-radius: 25px !important;
            margin-left: 10px !important;
            text-decoration: none !important;
        }

            .btnNavi:hover {
                background: #138496 !important;
            }

        #dynamicImage {
            height: 150px !important;
            width: 150px !important;
            background: #f8f8f8;
            border: 1px solid #ededed;
            border-radius: 2px;
        }

        #btnAcoount {
            display: inline-block;
            padding: 12px 68px;
            background: #efefef;
            font-weight: bold;
            color: rgb(120,120,120);
            border: none;
            outline: none;
            border-radius: 40px;
            text-transform: uppercase;
            cursor: pointer;
            transition: ease .3s;
        }

            #btnAcoount:hover {
                background: #4dbccd;
                color: #fff;
            }
    </style>
    <script>
        function loadProfile(event) {
            var files = event.target.files;
            for (var i = 0; i < files.length; i++) {
                $("#dynamicImage").attr("src", URL.createObjectURL(event.target.files[i]));
            }
        }
    </script>

    <!-- Header Start -->
    <div class="container-fluid bg-primary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
            <h3 class="display-3 font-weight-bold text-white">User Account</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0"><a class="text-white" href="">Home</a></p>
                <p class="m-0 px-2">/</p>
                <p class="m-0">My Account</p>
            </div>
        </div>
    </div>
    <!-- Header End -->

    <div class="container-fluid">
        <div class="row justify-content-center ">
            <div class="col-md-8">
                <!-- My Account Form Start -->
                <h2 class="text-left px-5">
                    KidKinder Account Profile
                </h2>
                <form asp-controller="Account" asp-action="MyAccount" enctype="multipart/form-data" method="post" id="formAcoount">
                    <h4 class="text-left font-weight-bolder">Welcome @Model.FullName 😊</h4>
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible show fade">
                            <div class="alert-body">
                                <button class="close" data-dismiss="alert">
                                    <span>×</span>
                                </button>
                                @Html.Raw(TempData["Success"])
                            </div>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible show fade">
                            <div class="alert-body">
                                <button class="close" data-dismiss="alert">
                                    <span>×</span>
                                </button>
                                @Html.Raw(TempData["Error"])
                            </div>
                        </div>
                    }
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <div style="display: flex; justify-content: center;">
                        <div id="image-preview" class="image-preview">
                            <label for="choose-file" class="custom-file-upload" id="choose-file-label">
                                Change Avatar
                            </label>
                            <input asp-for="Image" name="Image" type="file" id="choose-file"
                                   accept="image/png,image/jpg,image/jpeg" onchange="loadProfile(event)" style="display: none !important;" />
                            @if (Model.ProfileImage != null)
                            {
                                <img id="dynamicImage" src="@Model.ProfileImage" alt="Profile Image" width="120" height="120" style="border-radius: 50%;" />
                                <input type="hidden" asp-for="ProfileImage" value="@Model.ProfileImage" />
                            }
                        </div>
                    </div>
                    <label class="formLabel">
                        <p class="label-txt">
                            YOUR FULL NAME
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </p>
                        <input type="text" class="input" value="@Model.FullName" asp-for="FullName" placeholder="John Doe" />
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </label>
                    <label class="formLabel">
                        <p class="label-txt">
                            YOUR USER NAME
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </p>
                        <input type="text" class="input" value="@Model.Username" asp-for="Username" placeholder="johndoe" />
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </label>
                    <label class="formLabel">
                        <p class="label-txt">
                            YOUR EMAIL
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </p>
                        <input type="text" class="input" asp-for="Email" value="@Model.Email" readonly="readonly" placeholder="abc@exmaple.com" />
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </label>
                    <button id="btnAcoount" type="submit">Save</button>
                </form>
                <!-- My Account Form End -->
            </div>
        </div>
    </div>

    @section Scripts {
    <script>
        $(document).ready(function () {

            $('#choose-file').change(function () {
                var file = $('#choose-file')[0].files[0].name;
                $('#choose-file-label').text(file);
            });

            // Check If dynamicImage contains image or not on form submit
            $('#formAcoount').submit(function () {
                if ($('#dynamicImage').attr('src') == '') {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Please select an image',
                        icon: 'error',
                    });
                    return false;
                }
            });

            $('.input').focus(function () {
                $(this).parent().find(".label-txt").addClass('label-active');
                $(this).parent().find(".label-txt").css('color', '#222');
                $(this).parent().find(".label-txt").css('font-weight', 'bold');
            });

            $(".input").focusout(function () {
                if ($(this).val() == '') {
                    $(this).parent().find(".label-txt").removeClass('label-active');
                    $(this).parent().find(".label-txt").css('color', '#222');
                    $(this).parent().find(".label-txt").css('font-weight', 'normal');
                };
            });

        });
    </script>
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
else
{
    <script>
        window.location.href = "/Account/Login";
    </script>
}